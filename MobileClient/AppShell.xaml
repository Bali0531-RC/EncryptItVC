<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EncryptItVC.MobileClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EncryptItVC.MobileClient.Views"
    Title="EncryptItVC Mobile"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="True">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="{StaticResource Primary}" HeightRequest="200">
                <Image Source="appicon.png" 
                       HeightRequest="64"
                       WidthRequest="64"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"/>
                <Label Text="EncryptItVC Mobile" 
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="White"
                       VerticalOptions="End"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20"/>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <FlyoutItem Title="Connection" Icon="wifi.png">
        <ShellContent Title="Login" Route="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Voice Chat" Icon="microphone.png">
        <ShellContent Title="Main" Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Channels" Icon="channel.png">
        <ShellContent Title="Channels" Route="ChannelPage" ContentTemplate="{DataTemplate local:ChannelPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent Title="Settings" Route="SettingsPage" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>

</Shell>
