<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EncryptItVC.MobileClient.Views.LoginPage"
             Title="Connect to Server"
             BackgroundColor="{StaticResource DarkBackground}">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand">
            
            <!-- Logo -->
            <Image Source="appicon.png" 
                   HeightRequest="100" 
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30"/>
            
            <!-- Title -->
            <Label Text="EncryptItVC Mobile" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            
            <!-- Connection Status -->
            <Label Text="{Binding StatusMessage}" 
                   FontSize="14"
                   TextColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            
            <!-- Server Connection -->
            <Frame BackgroundColor="{StaticResource Secondary}" 
                   BorderColor="Transparent"
                   CornerRadius="10"
                   Padding="20">
                <StackLayout Spacing="15">
                    <Label Text="Server Connection" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Entry x:Name="ServerEntry" 
                           Text="{Binding ServerAddress}"
                           Placeholder="Server IP:Port (e.g., 192.168.1.100:7777)"
                           Keyboard="Url"/>
                    
                    <Button Text="{Binding ConnectButtonText}" 
                            Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding IsNotConnecting}"
                            BackgroundColor="{StaticResource Tertiary}"/>
                </StackLayout>
            </Frame>
            
            <!-- User Authentication -->
            <Frame BackgroundColor="{StaticResource Secondary}" 
                   BorderColor="Transparent"
                   CornerRadius="10"
                   Padding="20"
                   IsVisible="{Binding IsConnected}">
                <StackLayout Spacing="15">
                    <Label Text="User Authentication" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Entry x:Name="UsernameEntry" 
                           Text="{Binding Username}"
                           Placeholder="Username"/>
                    
                    <Entry x:Name="PasswordEntry" 
                           Text="{Binding Password}"
                           Placeholder="Password"
                           IsPassword="True"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Text="Login" 
                                Grid.Column="0"
                                Command="{Binding LoginCommand}"
                                BackgroundColor="{StaticResource VoiceActive}"/>
                        
                        <Button Text="Register" 
                                Grid.Column="1"
                                Command="{Binding RegisterCommand}"
                                BackgroundColor="{StaticResource Tertiary}"/>
                    </Grid>
                </StackLayout>
            </Frame>
            
            <!-- Quick Connect -->
            <Frame BackgroundColor="{StaticResource Secondary}" 
                   BorderColor="Transparent"
                   CornerRadius="10"
                   Padding="20">
                <StackLayout Spacing="15">
                    <Label Text="Quick Connect" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    
                    <Button Text="Connect to Local Server (127.0.0.1:7777)" 
                            Command="{Binding QuickConnectCommand}"
                            BackgroundColor="{StaticResource Gray600}"/>
                </StackLayout>
            </Frame>
            
            <!-- Info -->
            <Label Text="EncryptItVC Mobile v2.0&#x0a;Secure Voice Communication Platform" 
                   FontSize="12"
                   TextColor="{StaticResource Gray300}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,30,0,0"/>
                   
        </StackLayout>
    </ScrollView>
    
</ContentPage>
