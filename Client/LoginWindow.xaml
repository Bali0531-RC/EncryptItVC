<Window x:Class="EncryptItVC.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="EncryptItVC - Login" Height="450" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
            <TextBlock Text="ðŸŽ™ï¸ EncryptItVC" FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="#FF00BCD4"/>
            <TextBlock Text="Secure Voice Communication" FontSize="14" 
                       HorizontalAlignment="Center" Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Login Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <!-- Server Connection -->
            <TextBlock Text="Server Connection" FontSize="16" FontWeight="Bold" 
                       Margin="0,0,0,10" Foreground="#FF00BCD4"/>
            
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="ServerHostTextBox" Grid.Column="0" 
                         materialDesign:HintAssist.Hint="Server IP" 
                         Text="127.0.0.1" Margin="0,0,5,0"
                         Background="#FF2A2A2A" Foreground="White" 
                         BorderBrush="#FF404040"/>
                
                <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" 
                           Margin="5,0,5,0" Foreground="White"/>
                
                <TextBox x:Name="ServerPortTextBox" Grid.Column="2" 
                         materialDesign:HintAssist.Hint="Port" 
                         Text="7777" Width="60"
                         Background="#FF2A2A2A" Foreground="White" 
                         BorderBrush="#FF404040"/>
            </Grid>
            
            <Button x:Name="ConnectButton" Content="Connect to Server" 
                    Click="ConnectButton_Click" Margin="0,0,0,20"
                    Background="#FF00BCD4" Foreground="White" 
                    BorderBrush="#FF00BCD4"/>
            
            <!-- Login Section -->
            <TextBlock Text="User Authentication" FontSize="16" FontWeight="Bold" 
                       Margin="0,0,0,10" Foreground="#FF00BCD4"/>
            
            <TextBox x:Name="UsernameTextBox" 
                     materialDesign:HintAssist.Hint="Username" 
                     Margin="0,0,0,15"
                     Background="#FF2A2A2A" Foreground="White" 
                     BorderBrush="#FF404040"/>
            
            <PasswordBox x:Name="PasswordBox" 
                         materialDesign:HintAssist.Hint="Password" 
                         Margin="0,0,0,15"
                         Background="#FF2A2A2A" Foreground="White" 
                         BorderBrush="#FF404040"/>
            
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="LoginButton" Grid.Column="0" Content="Login" 
                        Click="LoginButton_Click" Margin="0,0,5,0"
                        Background="#FF4CAF50" Foreground="White" 
                        BorderBrush="#FF4CAF50" IsEnabled="False"/>
                
                <Button x:Name="RegisterButton" Grid.Column="1" Content="Register" 
                        Click="RegisterButton_Click" Margin="5,0,0,0"
                        Background="#FF9C27B0" Foreground="White" 
                        BorderBrush="#FF9C27B0" IsEnabled="False"/>
            </Grid>
        </StackPanel>
        
        <!-- Status -->
        <StackPanel Grid.Row="2">
            <TextBlock x:Name="StatusTextBlock" Text="Not connected" 
                       HorizontalAlignment="Center" Foreground="Gray"/>
            <ProgressBar x:Name="LoadingProgressBar" IsIndeterminate="True" 
                         Visibility="Collapsed" Margin="0,5,0,0"
                         Foreground="#FF00BCD4"/>
        </StackPanel>
    </Grid>
</Window>
