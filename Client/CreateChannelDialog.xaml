<Window x:Class="EncryptItVC.Client.CreateChannelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Create Channel" Height="350" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Create New Channel" FontSize="18" FontWeight="Bold" 
                   Foreground="#FF00BCD4" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBox x:Name="ChannelNameTextBox" 
                     materialDesign:HintAssist.Hint="Channel Name" 
                     Margin="0,0,0,15"
                     Background="#FF2A2A2A" Foreground="White" 
                     BorderBrush="#FF404040"/>
            
            <CheckBox x:Name="IsPrivateCheckBox" Content="Private Channel" 
                      Margin="0,0,0,15" Checked="IsPrivateCheckBox_Checked" 
                      Unchecked="IsPrivateCheckBox_Unchecked"/>
            
            <PasswordBox x:Name="PasswordBox" 
                         materialDesign:HintAssist.Hint="Password (optional)" 
                         Margin="0,0,0,15" IsEnabled="False"
                         Background="#FF2A2A2A" Foreground="White" 
                         BorderBrush="#FF404040"/>
            
            <TextBlock Text="Private channels require users to be invited or know the password to join." 
                       FontSize="12" Foreground="Gray" TextWrapping="Wrap" 
                       Margin="0,10,0,0"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" 
                    Click="CancelButton_Click" Margin="0,0,10,0"
                    Background="#FF757575" BorderBrush="#FF757575" 
                    Foreground="White" Padding="15,5"/>
            
            <Button x:Name="CreateButton" Content="Create" 
                    Click="CreateButton_Click" 
                    Background="#FF4CAF50" BorderBrush="#FF4CAF50" 
                    Foreground="White" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
