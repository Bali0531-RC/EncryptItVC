<Window x:Class="EncryptItVC.Client.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Enter Password" Height="200" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Channel Password Required" FontSize="16" FontWeight="Bold" 
                   Foreground="#FF00BCD4" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="This channel requires a password to join." 
                       Foreground="Gray" Margin="0,0,0,10" TextAlignment="Center"/>
            
            <PasswordBox x:Name="PasswordBox" 
                         materialDesign:HintAssist.Hint="Password" 
                         Background="#FF2A2A2A" Foreground="White" 
                         BorderBrush="#FF404040" KeyDown="PasswordBox_KeyDown"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" 
                    Click="CancelButton_Click" Margin="0,0,10,0"
                    Background="#FF757575" BorderBrush="#FF757575" 
                    Foreground="White" Padding="15,5"/>
            
            <Button x:Name="OkButton" Content="OK" 
                    Click="OkButton_Click" 
                    Background="#FF4CAF50" BorderBrush="#FF4CAF50" 
                    Foreground="White" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
