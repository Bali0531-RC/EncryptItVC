<Window x:Class="EncryptItVC.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="EncryptItVC" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#FF2A2A2A"/>
            <Setter Property="BorderBrush" Value="#FF404040"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF00BCD4"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF404040"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF252525" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🎙️ EncryptItVC" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF00BCD4" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentChannelTextBlock" Text="- Lobby" 
                               FontSize="14" Margin="10,0,0,0" VerticalAlignment="Center"
                               Foreground="Gray"/>
                    <TextBlock Text="•" FontSize="14" Margin="10,0,5,0" VerticalAlignment="Center"
                               Foreground="Gray"/>
                    <TextBlock x:Name="ConnectionStatusTextBlock" Text="Connected" 
                               FontSize="12" VerticalAlignment="Center"
                               Foreground="Green"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock x:Name="UsernameTextBlock" Text="Username" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="UserRoleTextBlock" Text="(User)" 
                               VerticalAlignment="Center" Foreground="Gray"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="AudioSettingsButton" Content="🎧 Audio" 
                            Click="AudioSettingsButton_Click" 
                            Background="#FF607D8B" BorderBrush="#FF607D8B" 
                            Foreground="White" Padding="10,5" Margin="0,0,10,0"/>
                    <Button Content="Disconnect" 
                            Click="DisconnectButton_Click" 
                            Background="#FFD32F2F" BorderBrush="#FFD32F2F" 
                            Foreground="White" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Channels -->
            <Border Grid.Column="0" Background="#FF252525" BorderBrush="#FF404040" 
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="Channels" FontSize="14" FontWeight="Bold" 
                                   Foreground="#FF00BCD4" Margin="0,0,0,10"/>
                        <Button x:Name="CreateChannelButton" Content="+ Create Channel" 
                                Click="CreateChannelButton_Click" 
                                Background="#FF4CAF50" BorderBrush="#FF4CAF50" 
                                Foreground="White" Padding="5" Margin="0,0,0,5"
                                IsEnabled="False"/>
                        <Button x:Name="RefreshChannelsButton" Content="🔄 Refresh" 
                                Click="RefreshChannelsButton_Click" 
                                Background="#FF607D8B" BorderBrush="#FF607D8B" 
                                Foreground="White" Padding="5"/>
                    </StackPanel>
                    
                    <ListBox x:Name="ChannelsListBox" Grid.Row="1" 
                             SelectionChanged="ChannelsListBox_SelectionChanged"
                             Margin="10,0,10,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding MemberCount, StringFormat=' ({0})'}" 
                                               Foreground="Gray" Margin="5,0,0,0"/>
                                    <TextBlock Text="🔒" Foreground="Orange" Margin="5,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPrivate}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Voice Controls -->
                    <StackPanel Grid.Row="2" Margin="10">
                        <Button x:Name="MicrophoneButton" Content="🎤 Microphone" 
                                Click="MicrophoneButton_Click" 
                                Background="#FF795548" BorderBrush="#FF795548" 
                                Foreground="White" Padding="5" Margin="0,0,0,5"/>
                        <Button x:Name="SpeakerButton" Content="🔊 Speaker" 
                                Click="SpeakerButton_Click" 
                                Background="#FF795548" BorderBrush="#FF795548" 
                                Foreground="White" Padding="5"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Center Panel - Chat -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Chat Messages -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" 
                              Background="#FF1E1E1E" Padding="10">
                    <ListBox x:Name="ChatMessagesListBox" 
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,2">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Username}" FontWeight="Bold" 
                                                   Foreground="#FF00BCD4" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss}'}" 
                                                   Foreground="Gray" FontSize="10" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Content}" Margin="0,2,0,0" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
                
                <!-- Chat Input -->
                <Grid Grid.Row="1" Background="#FF252525">
                    <Grid.Margin>
                        <Thickness>10</Thickness>
                    </Grid.Margin>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="ChatInputTextBox" Grid.Column="0" 
                             materialDesign:HintAssist.Hint="Type a message..." 
                             KeyDown="ChatInputTextBox_KeyDown"
                             Background="#FF2A2A2A" Foreground="White" 
                             BorderBrush="#FF404040" Margin="0,0,10,0"/>
                    
                    <Button x:Name="SendButton" Grid.Column="1" Content="Send" 
                            Click="SendButton_Click" 
                            Background="#FF00BCD4" BorderBrush="#FF00BCD4" 
                            Foreground="White" Padding="15,5"/>
                </Grid>
            </Grid>
            
            <!-- Right Panel - Users -->
            <Border Grid.Column="2" Background="#FF252525" BorderBrush="#FF404040" 
                    BorderThickness="1,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="10">
                        <TextBlock Text="Users in Channel" FontSize="14" FontWeight="Bold" 
                                   Foreground="#FF00BCD4" Margin="0,0,0,10"/>
                    </StackPanel>
                    
                    <ListBox x:Name="UsersListBox" Grid.Row="1" Margin="10,0,10,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" FontWeight="Bold"/>
                                    <TextBlock Text="👑" Foreground="Gold" Margin="5,0,0,0" 
                                               Visibility="Collapsed"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Admin Controls -->
                    <StackPanel x:Name="AdminControlsPanel" Grid.Row="2" Margin="10" 
                                Visibility="Collapsed">
                        <TextBlock Text="Admin Controls" FontSize="12" FontWeight="Bold" 
                                   Foreground="#FFE91E63" Margin="0,0,0,5"/>
                        <Button x:Name="GrantPermissionButton" Content="Grant Permissions" 
                                Click="GrantPermissionButton_Click" 
                                Background="#FFE91E63" BorderBrush="#FFE91E63" 
                                Foreground="White" Padding="5" Margin="0,0,0,5"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF252525" Padding="10" BorderBrush="#FF404040" 
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="StatusTextBlock" Grid.Column="0" 
                           Text="Connected" Foreground="Green"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="VoiceStatusTextBlock" 
                               Text="🎤 Ready" Foreground="Gray" Margin="0,0,10,0"/>
                    <ProgressBar x:Name="VoiceLevelProgressBar" 
                                 Width="100" Height="10" 
                                 Minimum="0" Maximum="100" Value="0"
                                 Foreground="#FF00BCD4" Background="#FF404040"
                                 Margin="0,0,10,0" Visibility="Collapsed"/>
                    <TextBlock x:Name="NetworkStatusTextBlock" 
                               Text="📶 Online" Foreground="Green"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
